program Ej6P2;
var 
dia, fecha1, fecha2 ,hora, minuto, suma : integer;
begin
    write('Introduzca el primero tiempo');

readln(fecha1);
write ('Introduzca el segundo tiempo');
readln (fecha2);
suma:= fecha1+fecha2;
 dia := suma div 2400 ; //Det los dias sumando los minutos totales 
 suma:= suma mod 2400 ; //Quitar los dias de la suma 
 hora:=suma div 100;
 minuto := suma mod 100;
 writeln ('La suma de los tiempos es: ', dia,' ', hora:2,minuto:2);
end.



