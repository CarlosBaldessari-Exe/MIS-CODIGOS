function esPosterior (f1, f2: TFecha) : boolean;
begin
  if (f1.anio > f2.anio) or
     ((f1.anio = f2.anio) and (f1.mes > f2.mes)) or
     ((f1.anio = f2.anio) and (f1.mes = f2.mes) and (f1.dia > f2.dia)) then
    esPosterior := true
  else
    esPosterior := false;
end;}
